<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">

    <changeSet id="5" author="hamza">
        <createTable tableName="ligne_commande_fournisseur">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantite" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="montant_ligne" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_ligne_produit" references="produit(id)"/>
            </column>
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_ligne_commande" references="commande_fournisseur(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
